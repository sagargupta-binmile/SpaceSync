{
  "name": "nestjs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write \"server/**/*.{ts,js,json,md}\" \"client/frontend/**/*.{ts,tsx,js,jsx,json,css,scss,md}\""
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "server/**/*.{ts,js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "client/frontend/**/*.{ts,tsx,js,jsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@nestjs/microservices": "^11.1.6",
    "amqplib": "^0.10.9"
  }
}
